<tbody>
  <tr>
    <td><%= @plan.customer.name %></td>
    <td><%= link_to @plan.plan_title,edit_plan_path(@plan) %></td>
    <td><%= @plan.departure %></td>
		<td><%= @plan.arrival %></td>
		<td><%= @plan.days %></td>
		<td><%= @plan.budget %></td>
		<td><%= @plan.purposes %></td>
		<td><%= @plan.spot_list %></td>
		<td><%= @plan.purpose_spot %></td>
		<td><%= @plan.count %></td>
		<td><%= @plan.action %></td>
		<td><%= @plan.action_detail %></td>
		<td><%= @plan.action_date %></td>
		<td><%= @plan.action_time %></td>
		<td><%= @plan.cost %></td>
		<td><%= @plan.cost_sum %></td>

<% @post_tags.each do |tag| %>
  <%= tag.name %> <%= "(#{tag.plans.count})" %>
<% end %>

    <% if @plan.customer_id == current_customer %>
      <td><%= link_to "編集", edit_plan_path(@plan), class: "btn btn-success" %></td>
    <% end %>


  </tr>
</tbody>


<div class="row mt-4">
 <div class="form-inline ml-5">
  <!--ブックマーク-->
  <% if @plan.bookmarked_by?(current_customer) %>
   <%= link_to "ブックマークを外す", plan_bookmarks_path(@plan), method: :delete, class: "btn btn-outline-info" %>
  <% else %>
   <%= link_to "ブックマーク", plan_bookmarks_path(@plan), method: :post, class: "btn btn-info" %>
  <% end %>
 
　<!--いいね-->
  <% if @plan.favorited_by?(current_customer) %>
   <%= link_to plan_favorites_path(@plan), method: :delete, class: "btn btn-info" do %>
    ♥<%= @plan.favorites.count %> いいね
   <% end %>
  <% else %>
   <%= link_to plan_favorites_path(@plan), method: :post, class: "btn btn-outline-info" do %>
    ♡<%= @plan.favorites.count %> いいね
   <% end %>
  <% end %>
 </div>
</div>

<div class="mt-3 ml-4">
  <p>コメント件数：<%= @plan.post_comments.count %></p>
   <% @plan.post_comments.each do |post_comment| %>
    <p><%#= image_tag post_comment.user.get_profile_image(100,100) %></p>
    <%= post_comment.customer.name %>
    <%= post_comment.created_at.strftime('%Y/%m/%d') %>
    <%= post_comment.comment %>
   <% if post_comment.customer == current_customer %>
     <%= link_to "削除", plan_post_comment_path(post_comment.plan, post_comment), method: :delete %>
   <% end %>
  <% end %>
  <%= form_with model: [@plan, @post_comment] do |f| %>
    <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
    <%= f.submit "送信する" %>
  <% end %>
</div>
