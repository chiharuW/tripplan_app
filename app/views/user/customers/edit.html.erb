<section class="inner">

<h3 class="section-ttl text-center text-dark pt-4 pb-3">会員情報編集</h2>

<% if flash[:notice] %>
 <p class="text-active"><%= flash[:notice] %></p>
<% end %>

<div class="container pb-5">
<div class="row">

 <div class="border border-success rounded-lg col-md-5 py-3 text-center mx-auto  bg-success text-white">
	<%= form_with(model: @customer, url: update_information_path, local: true) do |f| %>
	<%= render 'layouts/error_messages', resource: @customer %>

  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
	<table class="mt-3 mb-4">
	 <thead></thead>
	 <tbody>
		<tr>
		 <td class="col-md-2"><%= f.label :name, "ユーザー名" %></td>
		 <td class="col-md-2"><%= f.text_field :name, autocomplete: "name", :placeholder =>"#{@customer.name}" %></td>
		</tr>
		<tr>
		 <td><%= f.label :email, "メールアドレス" %></td>
		 <td><%= f.email_field :email, autocomplete: "email", :placeholder =>"#{@customer.email}" %></td>
		</tr>
	 </tbody>
  </table>
  <%= f.submit "編集内容を保存する", class: "btn btn-light text-success btn-sm" %>
  <%= link_to "退会する", confirm_unsubscribe_path, class: "btn btn-light text-danger btn-sm" %>
	<% end %>
 </div>

</section>