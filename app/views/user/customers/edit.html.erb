<section class="inner">
	<h2 class="section-ttl">会員情報編集</h2>
	<%= form_with(model: @customer, url: update_information_path, local: true) do |f| %>
		<%= render 'layouts/error_messages', resource: @customer %>
		<table class="customer_info cus_form">
			<thead>
				<th></th>
				<th></th>
				<th></th>
			</thead>
			<tbody>
				<tr>
					<td><%= f.label :name, "ユーザー名" %></td>
					<td colspan="2"><%= f.text_field :name, autocomplete: "name", :placeholder =>"#{@customer.name}" %></td>
				</tr>
				<tr>
					<td><%= f.label :email, "メールアドレス" %></td>
					<td colspan="2"><%= f.email_field :email, autocomplete: "email", :placeholder =>"#{@customer.email}" %></td>
				</tr>
				<tr>
					<td colspan="2"><%= f.submit "編集内容を保存する", class: "btn btn-primary" %></td>
					<td><%#= link_to "退会する", confirm_unsubscribe_path, class: "btn btn-danger" %></td>
				</tr>
			</tbody>
		</table>
	<% end %>
</section>