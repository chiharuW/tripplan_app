<!DOCTYPE html>
<html>
  <head>
    <title>TripplanApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>


 <body>
  <header  class="user_header">
   <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="logo_area">
         <a class="navbar-brand" href="/"><%= image_tag 'logohd.png', class: "logo" %></a>
        </div>
        <div class="container">
         <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
         </button>
  
    <% if admin_signed_in? %>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">
           <li class="nav-item active">
           <%= link_to '会員一覧', admin_customers_path ,class: "nav-link"  %>
           <%= link_to 'ログアウト', destroy_admin_session_path, method: :delete ,class: "nav-link"  %>
           </li>
          </ul>
        </div>
       </div>
       </nav>
      </header>

     <% elsif customer_signed_in? %>


         <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">
           <li class="nav-item active">
            <%= link_to 'マイページ', mypage_path, method: :get ,class: "nav-link" %>
           </li>
           <li class="nav-item active">
            <%= link_to '投稿一覧', plans_path, method: :get ,class: "nav-link" %>
           </li>
           <li class="nav-item active">
            <%= link_to '新規作成', new_plan_path, method: :get ,class: "nav-link" %>
           </li>
           <li class="nav-item active">
            <%= link_to 'ログアウト', destroy_customer_session_path, method: :delete ,class: "nav-link" %>
           </li>
          </ul>
         </div>
        </div>
       </div>
      </nav>
     </header>

    <% else %>


         <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">
           <li class="nav-item active">
            <%= link_to '新規登録', new_customer_registration_path ,class: "nav-link" %>
           </li>
           <li class="nav-item active">
            <%= link_to 'ログイン', new_customer_session_path ,class: "nav-link" %>
           </li>
           <li class="nav-item active">
            <%= link_to 'ゲストログイン', user_guest_sign_in_path, method: :post ,class: "nav-link" %>
           </li>
          </ul>
         </div>
        </div>
       </div>
      </nav>
     </header>
    <% end %>


    <main>
      <%= yield %>
    </main>


     <footer class="footer-expand-lg navbar-dark bg-dark pt-3 pb-3">
      <ul class="navbar-nav">
        ロゴ
         <li class="nav-list-inline-item active">
           <a class="nav-link"href="#">お問い合わせ</a>
         </li>
        <!-- <li class="nav-item active">-->
        <!--   <a class="nav-link"href="#">お問い合わ</a>-->
        <!-- </li>-->
        <!--<li class="list-inline-item"><a href="#">お問い合わせ</a></li>-->
        <!--<li class="list-inline-item"><a href="#">採用情報</a></li>-->
        <!--<li class="list-inline-item"><a href="#">運営会社</a></li>-->
        </ul>
    </footer>

  </body>
</html>
