<!DOCTYPE html>
<html>
  <head>
    <title>TripplanApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
 <body>
    <% if admin_signed_in? %>
      <header class="admin_header">
        <div class="header-content">
          <%= link_to 'TripPlan', admin_top_path, class: "logo" %>
          <ul class="flex">
            <li><%= link_to '会員一覧', admin_customers_path %></li>
            <li><%= link_to 'ログアウト', destroy_admin_session_path, method: :delete %></li>
          </ul>
        </div>
      </header>
     <% elsif customer_signed_in? %>
      <header>
        <div class="header-content">
          <%= link_to 'NaganoCake', root_path, class: "logo" %>
          <ul class="flex">
            <p>ようこそ、<%= current_customer.name %>さん!</p>
            <li><%= link_to 'マイページ', mypage_path %></li>
            <li><%= link_to '新規作成', new_plan_path %></li>
            <li><%= link_to '下書き編集', root_path %></li>
            <li><%= link_to 'アバウト', about_path %></li>
            <li><%= link_to 'ログアウト', destroy_customer_session_path, method: :delete %></li>
          </ul>
        </div>
      </header>
    <% else %>
      <header>
        <div class="header-content">
          <%= link_to 'NaganoCake', root_path, class: "logo" %>
          <ul class="flex">
            <li><%= link_to '新規登録', new_customer_registration_path %></li>
            <li><%= link_to 'ログイン', new_customer_session_path %></li>
          </ul>
        </div>
      </header>
    <% end %>


    <main>
      <%= yield %>
    </main>

    <footer>Copyright © Infratop Inc. All Rights Reserved.</footer>
  </body>
</html>
