<!DOCTYPE html>
<html>
  <head>
    <title>TripplanApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>


 <body>
    <% if admin_signed_in? %>
      <header class="admin_header">
        <div class="navbar navbar-expand-lg navbar-light bg-light">
          <%= link_to 'TripPlan', admin_top_path, class: "logo" %>
          <ul class="flex">
            <li><%= link_to '会員一覧', admin_customers_path %></li>
            <li><%= link_to 'ログアウト', destroy_admin_session_path, method: :delete, class: "text_white" %></li>
          </ul>
        </div>
      </header>

     <% elsif customer_signed_in? %>
      <header  class="user_header">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
         <a class="navbar-brand " href="/">TripPlan</a>

         <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
         </button>

         <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">
           <li class="nav-item active">
            <a class="nav-link"href="/customers/mypage">マイページ</a>
           </li>
           <li class="nav-item active">
            <a class="nav-link" href="/plans">投稿一覧</a>
           </li>
           <li class="nav-item active">
            <a class="nav-link" href="/plans/new">新規作成</a>
           </li>
           <li class="nav-item active">
            <li class="nav-link"><%= link_to 'ログアウト', destroy_customer_session_path, method: :delete %></li>
            <!--<a class="nav-link" href="/customers/sign_out">ログアウト</a>-->
           </li>
          </ul>
         </div>
        </div>
       </div>
      </nav>
     </header>

    <% else %>
      <header  class="user_header">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
         <a class="navbar-brand " href="/">TripPlan</a>

         <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
         </button>

         <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">
           <li class="nav-item active">
            <li class="nav-link"><%= link_to '新規登録', new_customer_registration_path %></li>
           </li>
           <li class="nav-item active">
            <li class="nav-link"><%= link_to 'ログイン', new_customer_session_path %></li>
           </li>
           <li class="nav-item active">
            <li class="nav-link"><%= link_to 'ゲストログイン', homes_guest_sign_in_path, method: :post %></li>
           </li>
          </ul>
         </div>
        </div>
       </div>
      </nav>
     </header>
    <% end %>


    <main>
      <%= yield %>
    </main>


     <footer class="footer-expand-lg navbar-dark bg-dark pt-3 pb-3">
      <ul class="navbar-nav">
        ロゴ
         <li class="nav-list-inline-item active">
           <a class="nav-link"href="#">お問い合わせ</a>
         </li>
        <!-- <li class="nav-item active">-->
        <!--   <a class="nav-link"href="#">お問い合わ</a>-->
        <!-- </li>-->
        <!--<li class="list-inline-item"><a href="#">お問い合わせ</a></li>-->
        <!--<li class="list-inline-item"><a href="#">採用情報</a></li>-->
        <!--<li class="list-inline-item"><a href="#">運営会社</a></li>-->
        </ul>
    </footer>

  </body>
</html>
