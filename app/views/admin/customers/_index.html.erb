<div class="container my-4">
<h3 class="text-center">会員一覧</h3>
 <table class="table table-borderless col-md-8 mx-auto">
 	<thead>
 		<tr>
     <th>会員ID</th>
     <th>ユーザー名</th>
     <th>会員ステータス</th>
 		</tr>
 	</thead>
	<tbody>
		<% customers.each do |customer| %>
			<tr>
				<td><%= customer.id %></td>
				<td><%= customer.name %></td>
				<td>
					<% if customer.is_active? %>
						<span class="text-active">有効</span>
					<% else %>
						<span class="text-invalid">退会済み</span>
					<% end %>
				</td>
				<td><%= link_to "詳細", admin_customer_path(customer), class: "btn btn-primary" %></td>
			</tr>
		<% end %>
 </table>
</div>

