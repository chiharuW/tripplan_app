<div class="container my-4">
<h3 class="text-center"><%= @customer.name %> さんの会員情報編集</h3>
  <%= form_with(model: @customer, url: admin_customer_path(@customer), local: true) do |f| %>
	<%= render 'layouts/error_messages', resource: @customer %>

 <table class="table table-borderless col-md-5 mx-auto">
	<thead>
				<th></th>
				<th></th>
				<th></th>
			</thead>
			<tbody>
				<tr>
					<td>ユーザー名</td>
					<td colspan="2"><%= f.text_field :name, :placeholder =>"#{@customer.name}" %></td>
				</tr>
				<tr>
					<td>メールアドレス</td>
					<td colspan="2"><%= f.email_field :email, autocomplete: "email", :placeholder =>"#{@customer.email}" %></td>
				</tr>
				<tr>
					<td>会員ステータス</td>
					<td><%= f.radio_button :is_active, true %><%= f.label :is_active, "有効", class: "text-active" %></td>
					<td><%= f.radio_button :is_active, false %><%= f.label :is_active, "退会済み", class: "text-invalid" %></td>
				</tr>
				<tr>
					<td colspan="3"><%= f.submit "更新", class: "btn btn-success" %></td>
				</tr>
			</tbody>
		</table>
	<% end %>
</div>