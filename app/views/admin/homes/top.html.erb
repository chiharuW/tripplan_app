<div class="container my-4">
<h3>新着投稿</h3>
 <table class="table table-borderless col-md-8">
 	<thead>
 		<tr>
 		 <th>タイトル</th>
 		 <th>投稿者</th>
 		 <th>作成日</th>
 		</tr>
 	</thead>
 	<tbody>
 		<% @plans.each do |plan| %>
    <tr>
      <td><%= link_to plan.plan_title, plan_path(plan) %></td>
      <td><%= plan.customer.name %></td>
      <td><%= plan.created_at.strftime('%Y/%m/%d') %></td>
	  </tr>
	  <% end %>
	</tbody>
 </table>
</div>
